@model IEnumerable<Domain.Models.Poll>

@{
    ViewData["Title"] = "Polls List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Polls</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Poll</a>
    </div>

    <table class="table table-dark table-striped table-bordered table-hover">

        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Option 1</th>
                <th>Option 2</th>
                <th>Option 3</th>
                <th>Votes 1</th>
                <th>Votes 2</th>
                <th>Votes 3</th>
                <th>Date Created</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="10" class="text-center text-muted">No polls found.</td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option1Text)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option2Text)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option3Text)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option1VotesCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option2VotesCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Option3VotesCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-primary" asp-action="Vote" asp-route-id="@item.Id">Vote</a>
                            <a class="btn btn-sm btn-primary" asp-action="View" asp-route-id="@item.Id">View</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
